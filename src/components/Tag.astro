---
export interface Props {
  tag: string;
  tagName: string;
  count?: number;
  size?: "sm" | "lg";
}

const { tag, tagName, count, size = "sm" } = Astro.props;
---

<li
  class:list={[
    "group inline-block group-hover:cursor-pointer",
    size === "sm" ? "my-1 underline-offset-4" : "mx-1 my-3 underline-offset-8",
  ]}
>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "relative pr-2 text-lg underline decoration-dashed group-hover:-top-0.5 group-hover:text-accent focus-visible:p-1",
      { "text-sm": size === "sm" },
    ]}
  >
    <span># {tagName}</span>
    {
      typeof count === "number" && (
        <span class="ml-1 align-top text-xs text-gray-500">({count})</span>
      )
    }
  </a>
</li>
